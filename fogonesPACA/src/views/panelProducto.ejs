    <link rel="stylesheet" href="/css/panel.css">
    <title>ADMIN</title>
</head>
<body>
    <header>
        <%-include('./homeHeader.ejs')%>
      </header>
    
<div class="container  text-md-left mt-5">
  
          <h1>Productos vigentes</h1>
            <table>
              <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre producto</th>
                <th scope="col">Precio</th>
                <th scope="col">Stock</th>
                <th scope="col">Desctripcion</th>
                <th scope="col">Eliminar</th>
              </tr>
              
                <% for (let i = 0; i < producto.length; i ++ ) { %>
                 <tr>
                    
                    <td><%=producto[i].id %></td>
                    <td><a href="/productos/edit/<%=producto[i].id %>"> <%=producto[i].name %></a> </td>
                    <td><%=producto[i].price %></td>
                    <td><%=producto[i].stock %></td>   
                    <td><%=producto[i].description %></td> 
                    <form  action="/productos/borrado/<%=producto[i].id %>" method="POST">
                      <td><input  value="borrar" type="submit" ></td>
                    </form>
                    <% } %> 
                </tr>   
            </table>  
            


     </div> 
    </div>

    <div id="botones" >
      <a href="../login/miCuenta">
        <button type="button" class="btn btn-secondary">Volver a Mi Cuenta</button>
      </a>

      <a href="/productos/cargaProducto">
        <button  type="button" class="btn btn-secondary">Cargar nuevo producto</button>
      </a>
      
      <a href="../login/panelUsuario">
        <button type="button" class="btn btn-outline-secondary">Administradores</button>
      </a>
    </div>


